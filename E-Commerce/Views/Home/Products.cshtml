@model  IEnumerable<Product>
@{
    ViewData["Title"] = "Products Page";
}


@if (!Model.Any())
{
    <div class="alert alert-dismissible alert-warning">
        
        <h4 class="alert-heading">No Products Yet!!!</h4>
        <p> No Products are added yet. </p>
    </div>
}
else{
    <div class="row mt-5">
    @foreach(var p in Model)
{
 <div class="col-lg-4 col-md-6 ">
                <div class="card mt-1" style="width: 18rem;">
                    <img class="card-img-top" style="height:300px" src="~/assets/pictures/@p.photo" alt="Card image cap">
                    <div class="card-body">
                        
                        <h5 class="card-title">@p.Name</h5>
                        <h5 class="card-title">@p.Price jd</h5>
                        <p class="card-text">@p.Description</p>
                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-Id="@p.Id" class="btn btn-primary"> Add To Cart</a>
                    </div>
                </div>
 </div>
    
}
</div>


}

