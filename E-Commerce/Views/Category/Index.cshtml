@model List<Category>
@{
    ViewData["Title"] = "Category";
}

<a asp-action="Creat" class="btn btn-primary" >
    <i class="bi bi-plus-square"></i>
    Add Category
</a>
<table class="table table-hover">
    <thead>
        <tr>
            
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Edit</th>
            
        </tr>
    </thead>
    @foreach(var c in Model)
    {
        <tr class="table-active">
            <td>@c.Id</td>
            <td>@c.Name</td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-controller="Category" asp-route-Id="@c.Id"> <i class="bi bi-pen-fill"></i></a>
                <a class="btn btn-danger"  asp-action="Delete" asp-route-Id="@c.Id"> <i class="bi bi-trash-fill"></i></a>
            </td>
        </tr>
    }
    <tbody>
    
</tbody>
</table>